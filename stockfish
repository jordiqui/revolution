#!/usr/bin/env bash
set -euo pipefail

# Wrapper to run the built Revolution engine binary.
ENGINE_PATH="$(dirname "$0")/src/Revolution-3.60-181125"

if [[ ! -x "$ENGINE_PATH" ]]; then
  echo "Engine binary not found at $ENGINE_PATH" >&2
  echo "Please run 'cd src && make build' to compile the engine." >&2
  exit 1
fi

exec "$ENGINE_PATH" "$@"
